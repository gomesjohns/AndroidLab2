<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gomes.john.johngomes_comp304lab2.CuisinesTypeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cuisines"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:scaleType="fitXY"/>

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22000003"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <RadioButton
            android:id="@+id/americanCuisine"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingStart="30dp"
            android:text="@string/americanCuisineRadioButton"
            android:textAllCaps="true"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp"
            style="@style/radioButtonText"
            android:buttonTint="@color/textWhite"/>

        <RadioButton
            android:id="@+id/italianCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="30dp"
            android:text="@string/italianCuisineRadioButton"
            android:textAllCaps="true"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/americanCuisine"
            tools:layout_editor_absoluteX="8dp"
            style="@style/radioButtonText"
            android:buttonTint="@color/textWhite"/>

        <RadioButton
            android:id="@+id/chineseCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="30dp"
            android:text="@string/chineseCuisineRadioButton"
            android:textAllCaps="true"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/italianCuisine"
            tools:layout_editor_absoluteX="8dp"
            style="@style/radioButtonText"
            android:buttonTint="@color/textWhite"/>

        <RadioButton
            android:id="@+id/indianCusisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="30dp"
            android:text="@string/indianCuisineRadioButton"
            android:textAllCaps="true"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/chineseCuisine"
            tools:layout_editor_absoluteX="8dp"
            style="@style/radioButtonText"
            android:buttonTint="@color/textWhite"/>

    </RadioGroup>

</android.support.constraint.ConstraintLayout>
